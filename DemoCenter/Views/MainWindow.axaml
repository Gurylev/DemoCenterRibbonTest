<common:MxWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DemoCenter.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DemoCenter.Views"
        xmlns:common="clr-namespace:Eremex.AvaloniaUI.Controls.Common;assembly=Eremex.Avalonia.Controls"
        MinWidth="1000"
        MinHeight="620"    
        Width="1450"
        Height="940"  
        mc:Ignorable="d"
        d:DesignWidth="800" 
        d:DesignHeight="450"
        WindowStartupLocation="CenterScreen"
        x:Class="DemoCenter.Views.MainWindow"
        Icon="/Assets/EMXControls.ico"
        Title="{Binding Title, ElementName=mainView}">
        <views:MainView x:Name="mainView" />
</common:MxWindow>
