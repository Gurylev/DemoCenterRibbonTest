  <Style Selector="Button.IconButton">
        <Setter Property="MinHeight" Value="28"></Setter>
        <Setter Property="MinWidth" Value="28"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Padding" Value="8"></Setter>
    </Style>
    

    <Style Selector="Button.Link">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <Style Selector="Button.Link:pointerover">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <Style Selector="Button.Link:pointerover TextBlock">
        <Setter Property="TextDecorations" Value="Underline"></Setter>
    </Style>


    <Style Selector="Window.DialogWindow">
        <Setter Property="Padding" Value="{DynamicResource windowPadding}"></Setter>
    </Style>

    <Style Selector="mxe|TextEditor.Hyperlink">
          <Setter Property="Foreground" Value="{DynamicResource Icons/Outline/Blue}"/>
          <Setter Property="ReadOnly" Value="True"/>
          <Setter Property="Template">
              <ControlTemplate>
                  <TextBlock Cursor="Hand"
                             Text="{TemplateBinding EditorValue}"
                             VerticalAlignment="Center"
                             TextDecorations="Underline"        
                             Name="PART_RealEditorPresenter"
                             TextTrimming="CharacterEllipsis"/>
              </ControlTemplate>
          </Setter>
    </Style>
    <Style Selector="mxe|TextEditor.Hyperlink:activeMode">
          <Setter Property="Foreground" Value="{DynamicResource Icons/Outline/Blue}"/>
          <Setter Property="ReadOnly" Value="True"/>
          <Setter Property="Template">
              <ControlTemplate>
                  <TextBlock Cursor="Hand"
                             VerticalAlignment="Center"
                             TextDecorations="Underline"
                             Text="{TemplateBinding EditorValue}"
                             Name="PART_RealEditorPresenter"
                             TextTrimming="CharacterEllipsis"/>
              </ControlTemplate>
          </Setter>
    </Style>
  
  <Style Selector="Border.SimpleBorder">
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Light}"/>
      <Setter Property="Margin" Value="6"/>
  </Style>

    <Style Selector="ae|TextArea">
        <Setter Property="SelectionBrush" Value="{DynamicResource Fill/Accent/Highlighting/Text}" />
    </Style>   
  
  <Style Selector="Label.EditorHeader">
    <Setter Property="VerticalAlignment" Value="Bottom"/>
    <Setter Property="Margin" Value="6,0,6,12"/>
  </Style>
  
  <Style Selector="ContentControl.DemoUserControl">
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalAlignment" Value="Stretch"/>
    <Setter Property="BorderThickness" Value="0,0,1,0"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Border Background="Transparent"
                  BorderBrush="{DynamicResource Outline/Neutral/Transparent/Medium}"
                  BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter Content="{TemplateBinding Content}" 
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  
  <Style Selector="mx3d|Graphics3DControl.DemoGraphics3DControl">
    <Setter Property="Gizmo">
      <Template>
        <mx3d:Gizmo />
      </Template>
    </Setter>
  </Style>
  
  <Style Selector="charts|CartesianChart.DemoChart">
    <Setter Property="BorderThickness" Value="0,0,1,0"/> 
    <Setter Property="CornerRadius" Value="0"/>
  </Style>
  
  <Style Selector="charts|PolarChart.DemoChart">
    <Setter Property="BorderThickness" Value="0,0,1,0"/> 
    <Setter Property="CornerRadius" Value="0"/>
  </Style>
  
  <Style Selector="charts|SmithChart.DemoChart">
    <Setter Property="BorderThickness" Value="0,0,1,0"/> 
