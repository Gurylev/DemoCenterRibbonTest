  </Style>
  <Style Selector="Label.PropertyLabel">
      <Setter Property="Margin" Value="0,12,0,0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Grid.ColumnSpan" Value="2"/>
   </Style>
