  <Style Selector=":is(Panel).LayoutGroup > :is(Control)">
	  <Setter Property="Margin" Value="6,8,0,8"/>
  </Style>
  <Style Selector=":is(Panel).LayoutGroup > :is(Control):nth-last-child(1)">
	  <Setter Property="Margin" Value="6,8,6,8"/>
  </Style>
  
  <Style Selector=":is(Panel).LayoutGroup.Vertical > :is(Control)">
	  <Setter Property="Margin" Value="6,8,6,0"/>
  </Style>
  <Style Selector=":is(Panel).LayoutGroup.Vertical > :is(Control):nth-last-child(1)">
	  <Setter Property="Margin" Value="6,8,6,8"/>
  </Style>
  
  <Style Selector=":is(Panel).LayoutGroup > :is(Panel).LayoutGroup">
